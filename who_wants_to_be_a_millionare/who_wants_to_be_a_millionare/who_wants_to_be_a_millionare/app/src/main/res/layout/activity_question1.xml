<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_earned_amount"
        android:layout_width="279dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="611dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="15dp"
        android:text="Achieved: 0$"
        android:textColor="@color/textcol"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:textColor="@color/textcol"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radio_group_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:textColor="@color/textcol" />


    <Button
        android:id="@+id/button_submit"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group_options"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="checkAnswer"
        android:textColor="@color/textcol"
        android:text="Submit" />

</RelativeLayout>
